<?xml version="1.0" encoding="UTF-8"?>
<serializer>
    <class name="Sulu\Bundle\ContentBundle\Model\Excerpt\ExcerptView" exclusion-policy="ALL">
        <!-- serialize resource-id as id because toolbar-actions of sulu frontend expect an id property -->
        <virtual-property method="getResourceId" serialized-name="id" expose="true" groups="fullExcerpt"/>
        <virtual-property method="getTitle" serialized-name="title" expose="true" groups="fullExcerpt,partialExcerpt"/>
        <virtual-property method="getMore" serialized-name="more" expose="true" groups="fullExcerpt,partialExcerpt"/>
        <virtual-property method="getDescription" serialized-name="description" expose="true" groups="fullExcerpt,partialExcerpt"/>
        <virtual-property method="getCategoryIds" serialized-name="categories" expose="true" groups="fullExcerpt"/>
        <virtual-property method="getTagNames" serialized-name="tags" expose="true" groups="fullExcerpt"/>
        <virtual-property method="getIconsData" serialized-name="icons" expose="true" groups="fullExcerpt"/>
        <virtual-property method="getImagesData" serialized-name="images" expose="true" groups="fullExcerpt"/>
    </class>
</serializer>
