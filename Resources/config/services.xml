<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_content.doctrine_metadata_loader" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Doctrine\MetadataLoader">
            <!-- Priority 100 as the MetadataLoader need to be before the ResolveTargetEntityListener of Doctrine -->
            <tag name="doctrine.event_subscriber" priority="100"/>
        </service>

        <service id="sulu_content.content_view_builder" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Sulu\Admin\ContentViewBuilder">
            <argument type="service" id="sulu_admin.view_builder_factory"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Infrastructure\Sulu\Admin\ContentViewBuilderInterface" alias="sulu_content.content_view_builder"/>

        <!-- Merger -->
        <service id="sulu_content.merger.dimension" class="Sulu\Bundle\ContentBundle\Content\Application\Merger\DimensionMerger">
            <tag name="sulu_content.merger" />
        </service>

        <service id="sulu_content.merger.excerpt" class="Sulu\Bundle\ContentBundle\Content\Application\Merger\ExcerptMerger">
            <tag name="sulu_content.merger" />
        </service>

        <service id="sulu_content.merger.seo" class="Sulu\Bundle\ContentBundle\Content\Application\Merger\SeoMerger">
            <tag name="sulu_content.merger" />
        </service>

        <service id="sulu_content.merger.template" class="Sulu\Bundle\ContentBundle\Content\Application\Merger\TemplateMerger">
            <tag name="sulu_content.merger" />
        </service>

        <service id="sulu_content.content_dimension_merger" class="Sulu\Bundle\ContentBundle\Content\Application\ContentDimensionMerger">
            <argument type="tagged" tag="sulu_content.merger"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Application\ContentDimensionMergerInterface" class="sulu_content.content_dimension_merger"/>
    </services>
</container>
