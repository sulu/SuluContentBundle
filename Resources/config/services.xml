<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_content.metadata_loader" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Doctrine\MetadataLoader">
            <!-- Priority 100 as the MetadataLoader need to be before the ResolveTargetEntityListener of Doctrine -->
            <tag name="doctrine.event_subscriber" priority="100"/>
        </service>

        <service id="sulu_content.content_view_builder" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Sulu\Admin\ContentViewBuilder">
            <argument type="service" id="sulu_admin.view_builder_factory"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Infrastructure\Sulu\Admin\ContentViewBuilderInterface" alias="sulu_content.content_view_builder"/>

        <!-- ViewFactory -->
        <service id="sulu_content.view_factory" class="Sulu\Bundle\ContentBundle\Content\Application\ViewFactory\ViewFactory">
            <argument type="tagged" tag="sulu_content.view_factory_merger"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Domain\Factory\ViewFactoryInterface" alias="sulu_content.view_factory"/>

        <!-- TagFactory -->
        <service id="sulu_content.tag_factory" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Doctrine\TagFactory">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sulu.repository.tag"/>
        </service>

        <!-- CategoryFactory -->
        <service id="sulu_content.category_factory" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Doctrine\CategoryFactory">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <!-- DimensionCollection Factory -->
        <service id="sulu_content.dimension_collection_factory" class="Sulu\Bundle\ContentBundle\Content\Domain\Factory\DimensionCollectionFactory">
            <argument type="service" id="sulu.repository.dimension"/>
        </service>

        <!-- Content Dimension Factory -->
        <service id="sulu_content.content_dimension_factory" class="Sulu\Bundle\ContentBundle\Content\Application\ContentDimensionFactory\ContentDimensionCollectionFactory">
            <argument type="service" id="sulu_content.content_dimension_repository"/>
            <argument type="tagged" tag="sulu_content.content_dimension_mapper"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Domain\Factory\ContentDimensionCollectionFactoryInterface" alias="sulu_content.content_dimension_factory"/>

        <!-- Content Dimension Loader -->
        <service id="sulu_content.content_dimension_repository" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Doctrine\ContentDimensionRepository">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Domain\Repository\ContentDimensionRepositoryInterface" alias="sulu_content.content_dimension_repository"/>

        <!-- Route Defaults Provider -->
        <service id="sulu_content.route_defaults_provider" class="Sulu\Bundle\ContentBundle\Content\Infrastructure\Sulu\Route\ContentRouteDefaultsProvider">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sulu_content.content_loader"/>
            <argument type="service" id="sulu_page.structure.factory"/>
            <argument type="service" id="sulu_page.compat.structure.legacy_property_factory"/>
            <argument type="service" id="sulu_http_cache.cache_lifetime.resolver"/>

            <tag name="sulu_route.defaults_provider"/>
        </service>

        <!-- Content Persister -->
        <service id="sulu_content.content_persister" class="Sulu\Bundle\ContentBundle\Content\Application\ContentPersister\ContentPersister">
            <argument type="service" id="sulu_content.dimension_collection_factory"/>
            <argument type="service" id="sulu_content.content_dimension_factory"/>
            <argument type="service" id="sulu_content.view_factory"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Application\ContentPersister\ContentPersisterInterface" alias="sulu_content.content_persister"/>

        <!-- Content Loader -->
        <service id="sulu_content.content_loader" class="Sulu\Bundle\ContentBundle\Content\Application\ContentLoader\ContentLoader">
            <argument type="service" id="sulu.repository.dimension"/>
            <argument type="service" id="sulu_content.content_dimension_repository"/>
            <argument type="service" id="sulu_content.view_factory"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Application\ContentLoader\ContentLoaderInterface" alias="sulu_content.content_loader"/>

        <!-- ApiViewResolver -->
        <service id="sulu_content.api_view_resolver" class="Sulu\Bundle\ContentBundle\Content\Application\ViewResolver\ApiViewResolver">
            <argument type="tagged" tag="sulu_content.api_resolver"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Application\ViewResolver\ApiViewResolverInterface" alias="sulu_content.api_view_resolver"/>

        <service id="sulu_content.content_copier" class="Sulu\Bundle\ContentBundle\Content\Application\ContentCopier\ContentCopier">
            <argument type="service" id="sulu_content.content_loader"/>
            <argument type="service" id="sulu_content.content_persister"/>
            <argument type="service" id="sulu_content.api_view_resolver"/>
        </service>

        <!-- ContentFacade -->
        <service id="sulu_content.content_facade" class="Sulu\Bundle\ContentBundle\Content\Application\ContentFacade\ContentFacade">
            <argument type="service" id="sulu_content.content_loader"/>
            <argument type="service" id="sulu_content.content_persister"/>
            <argument type="service" id="sulu_content.api_view_resolver"/>
            <argument type="service" id="sulu_content.content_copier"/>
        </service>

        <service id="Sulu\Bundle\ContentBundle\Content\Application\ContentFacade\ContentFacadeInterface" alias="sulu_content.content_facade"/>
    </services>
</container>
